<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.photoMapper">
	<!-- 사진 -->
	<!-- 사진 추가 -->
	<insert id="photoWrite" parameterType="photoDTO" useGeneratedKeys="true" keyColumn="usedNo,photoId,fileName" keyProperty="usedNo,photoId,fileName">
		INSERT INTO photo 
		VALUES     (photoId.nextval, 
		           #{usedNo},
		           #{dir},
		           #{fileName},
		           #{originalName},
		           #{fileType},
		           #{fileSize},
		            sysdate)
	</insert>

	<!-- 사진 삭제 -->
	<delete id="photoDelete" parameterType="int" >
		DELETE FROM photo 
		WHERE  usedNo = #{usedNo}
	</delete>
	
	<select id="photoSelect" parameterType="java.util.Map" resultType="photoDTO">
		SELECT * FROM photo
		<where>
			<if test = "type.equals('fileName')" >
				fileName = #{fileName}
			</if>
			<if test = "type.equals('usedNo')" >
				usedNo = #{usedNo}
			</if>
			<if test = "type.equals('photoId')" >
				photoId = #{photoId}
			</if>
		</where>
	</select>
	
	
	<!-- 사진조회 by 차량번호 -->
	<select id="photoSelectS" parameterType="String" resultType="photoDTO">
		SELECT * FROM photo
		WHERE fileName = #{fileName}
	</select>
	
	<!-- 사진조회 by 사진아이디 -->
	<select id="photoSelectI" parameterType="int" resultType="photoDTO">
		SELECT * FROM photo
		WHERE photoId = #{photoId}
	</select>
	
	<!-- 사진조회 by 주차번호 -->
	<select id="photoSelectU" parameterType="int" resultType="photoDTO">
		SELECT * FROM photo
		WHERE usedNo = #{usedNo}
	</select>
</mapper>