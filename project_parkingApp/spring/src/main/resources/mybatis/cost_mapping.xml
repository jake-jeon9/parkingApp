<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.costMapper">
	<!-- 요금 -->
	<!-- 요금 추가 -->
	<insert id="costInsert" parameterType="int" useGeneratedKeys="true" keyColumn="memberNo" keyProperty="memberNo">
		INSERT INTO cost 
		VALUES  (  #{memberNo},
		           DEFAULT,
				   DEFAULT,
				   DEFAULT,
				   DEFAULT,
				   DEFAULT,
				   DEFAULT,
				   DEFAULT,
				   SYSDATE)
	</insert>
	<!-- 요금 수정 -->
	<update id="costModify" parameterType="costDTO" >
		UPDATE cost 
		SET    additionalCost = #{additionalCost}, 
			   additionalTiem = #{additionalTiem},
			   baseCost = #{baseCost},
			   baseTime = #{baseTime},
			   maxcost = #{maxcost},
			   maxtime = #{maxtime},
			   maxArea = #{maxArea},
		       reg_date = sysdate 
		WHERE  memberNo = #{memberNo} 
	</update>
	<!-- 요금 삭제 -->
	<delete id="costDelete" parameterType="int" >
		DELETE FROM cost 
		WHERE  memberNo = #{memberNo}
	</delete>
	<!-- 요금조회 -->
	<select id="costSelect" parameterType="int" resultType="costDTO">
		SELECT * FROM cost 
		WHERE memberNo = #{memberNo}
	</select>
	
	<!-- 쿠폰 추가 -->
	<insert id="couponInsert" parameterType="couponDTO" useGeneratedKeys="true" keyColumn="usedNo,memberNo" keyProperty="usedNo,memberNo">
		INSERT INTO coupon 
		VALUES  (  #{usedNo},
				   #{memberNo},
				   #{tartgetNo},
				   #{target_type}
				)
	</insert>
	
	<!-- 쿠폰 삭제 -->
	<delete id="couponDelete" parameterType="int" >
		DELETE FROM coupon 
		WHERE  usedNo = #{usedNo}
	</delete>
	<!-- 쿠폰 조회 -->
	<select id="couponSelect" parameterType="int" resultType="coupontDTO">
		SELECT * FROM coupon
		WHERE  usedNo = #{usedNo} 
	</select>
	
</mapper>